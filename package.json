{
  "name": "app-explorer",
  "displayName": "app-explorer",
  "description": "Helps build documentation while navigating through code",
  "version": "0.2.0",
  "publisher": "dropbox",
  "repository": "https://github.com/dropbox/AppExplorer",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run type-check && npm run lint && node esbuild.cjs",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.cjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run type-check && npm run lint && node esbuild.cjs",
    "compile-tests": "tsc -p .  --noEmit false --outDir out",
    "watch-tests": "tsc -p .  -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "prepare": "husky",
    "test": "vscode-test --coverage"
  },
  "contributes": {
    "commands": [
      {
        "command": "app-explorer.createCard",
        "title": "AppExplorer: Create Card"
      },
      {
        "command": "app-explorer.internal.logFile",
        "title": "AppExplorer: [INTERNAL] Get Log File Path"
      },
      {
        "command": "app-explorer.attachCard",
        "title": "AppExplorer: Attach Card to Code"
      },
      {
        "command": "app-explorer.tagCard",
        "title": "AppExplorer: Tag Selected Cards"
      },
      {
        "command": "app-explorer.manageWorkspaceBoards",
        "title": "AppExplorer: Manage Workspace Boards"
      },
      {
        "command": "app-explorer.renameBoard",
        "title": "AppExplorer: Rename Board"
      },
      {
        "command": "app-explorer.navigate",
        "title": "AppExplorer: Navigate to Card"
      },
      {
        "command": "app-explorer.connect",
        "title": "AppExplorer: Start Local Miro Server"
      },
      {
        "command": "app-explorer.updateExtension",
        "title": "AppExplorer: Update Extension"
      },
      {
        "command": "app-explorer.launchMockMiroClient",
        "title": "Launch Mock Miro Client",
        "category": "AppExplorer: MockMiro"
      },
      {
        "command": "app-explorer.mockMiro.showCardList",
        "title": "Show Card List",
        "category": "AppExplorer: MockMiro"
      },
      {
        "command": "app-explorer.mockMiro.simulateCardOpen",
        "title": "MockMiro: Simulate Card Open",
        "category": "AppExplorer"
      },
      {
        "command": "app-explorer.mockMiro.simulateCardSelection",
        "title": "MockMiro: Simulate Card Selection",
        "category": "AppExplorer"
      },
      {
        "command": "app-explorer.mockMiro.simulateCardUpdate",
        "title": "MockMiro: Simulate Card Update",
        "category": "AppExplorer"
      },
      {
        "command": "app-explorer.mockMiro.showStatus",
        "title": "MockMiro: Show Status",
        "category": "AppExplorer"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "app-explorer.createCard",
          "when": "appExplorer.enabled"
        },
        {
          "command": "app-explorer.internal.logFile",
          "when": "app-explorer.never"
        },
        {
          "command": "app-explorer.attachCard",
          "when": "appExplorer.enabled"
        },
        {
          "command": "app-explorer.tagCard",
          "when": "appExplorer.enabled"
        },
        {
          "command": "app-explorer.manageWorkspaceBoards",
          "when": "appExplorer.enabled"
        },
        {
          "command": "app-explorer.renameBoard",
          "when": "appExplorer.enabled"
        },
        {
          "command": "app-explorer.navigate",
          "when": "appExplorer.enabled"
        },
        {
          "command": "app-explorer.connect",
          "when": "!appExplorer.enabled"
        },
        {
          "command": "app-explorer.updateExtension",
          "when": "config.appExplorer.updateExtension"
        },
        {
          "command": "app-explorer.launchMockMiroClient",
          "when": "appExplorer.enabled"
        },
        {
          "command": "app-explorer.mockMiro.showCardList",
          "when": "mockMiroClient.connected"
        },
        {
          "command": "app-explorer.mockMiro.simulateCardOpen",
          "when": "mockMiroClient.connected"
        },
        {
          "command": "app-explorer.mockMiro.simulateCardSelection",
          "when": "mockMiroClient.connected"
        },
        {
          "command": "app-explorer.mockMiro.simulateCardUpdate",
          "when": "mockMiroClient.connected"
        },
        {
          "command": "app-explorer.mockMiro.showStatus",
          "when": "mockMiroClient.connected"
        }
      ]
    },
    "colors": [
      {
        "id": "appExplorer.background",
        "description": "Background applied to code that is connected to a card.",
        "defaults": {
          "dark": "#183c4a",
          "light": "#eaf8fd",
          "highContrast": "#183c4a"
        }
      },
      {
        "id": "appExplorer.selectedBackground",
        "description": "Background applied to code that is connected to a card.",
        "defaults": {
          "dark": "#223a1a",
          "light": "#f4faef",
          "highContrast": "#f4ff00"
        }
      },
      {
        "id": "appExplorer.selectedBorder",
        "description": "Border applied to code that is connected to a card.",
        "defaults": {
          "dark": "#f4ff00",
          "light": "#4ec2ea",
          "highContrast": "#f4ff00"
        }
      },
      {
        "id": "appExplorer.rulerColor",
        "description": "Color of the ruler line that represents cards.",
        "defaults": {
          "dark": "#0000ff",
          "light": "#0000ff",
          "highContrast": "#0000ff"
        }
      }
    ],
    "configuration": {
      "title": "AppExplorer",
      "properties": {
        "appExplorer.debug": {
          "type": "string",
          "default": null,
          "description": "Set debug namespace"
        },
        "appExplorer.internal.serverPort": {
          "type": "integer",
          "default": 9042,
          "minimum": 1024,
          "maximum": 65535,
          "description": "⚠️ INTERNAL USE ONLY: Server port for E2E testing. Production Miro integration MUST use port 9042. Only modify for automated testing purposes.",
          "scope": "application"
        }
      }
    },
    "icons": {
      "app-explorer": {
        "description": "AppExplorer Icon",
        "default": {
          "fontPath": "font/app-explorer.woff",
          "fontCharacter": "\\ea02"
        }
      }
    },
    "iconFonts": [
      {
        "id": "app-explorer-font",
        "src": [
          {
            "path": "font/app-explorer.woff",
            "format": "woff"
          }
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.5",
    "@types/node": "20.x",
    "@types/socket.io-client": "^3.0.0",
    "@types/vscode": "^1.98.0",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "debug": "^4.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "vite": "^5.4.11"
  },
  "dependencies": {
    "@lit/context": "^1.1.6",
    "@lit/task": "^1.0.3",
    "@mirohq/websdk-types": "^2.9.5",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "lit": "^3.3.1",
    "lit-html": "^3.0.0",
    "mermaid": "^11.9.0",
    "morgan": "^1.10.0",
    "prettier": "^3.4.1",
    "sinon": "^21.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tiny-invariant": "^1.3.1",
    "ws": "^8.14.1"
  }
}
